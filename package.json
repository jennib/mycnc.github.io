{
  "name": "mycnc.app",
  "private": true,
  "version": "1.0.5",
  "description": "Gcode sender for CNC machines",
  "author": {
    "name": "jennib",
    "email": "jenni.b@gmail.com"
  },
  "main": "./out/main/index.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "electron-vite dev -- --enable-logging --trace-warnings",
    "electron:build": "electron-vite build",
    "preview": "electron-vite preview",
    "dist": "electron-vite build && electron-builder"
  },
  "build": {
    "appId": "com.mycnc.app",
    "productName": "myCNC",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*",
      "package.json",
      "build/mycnc.icns"
    ],
    "mac": {
      "category": "public.app-category.Utilities",
      "icon": "build/mycnc.icns",
      "extendInfo": {
        "NSCameraUsageDescription": "This app requires camera access to capture video for your CNC projects.",
        "NSMicrophoneUsageDescription": "This app requires microphone access to capture audio."
      }
    },
    "win": {
      "target": "nsis",
      "icon": "build/mycnc.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "build/icons"
    }
  },
  "dependencies": {
    "@vercel/analytics": "^1.5.0",
    "electron-squirrel-startup": "^1.0.1"
  },
  "devDependencies": {
    "@types/node": "^18.19.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "electron-vite": "^4.0.1",
    "postcss": "^8.4.38",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.2",
    "vite": "^5.3.1"
  }
}
