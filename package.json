{
  "name": "mycnc.app",
  "private": true,
  "version": "1.0.5",
  "description": "Gcode sender for CNC machines",
  "author": {
    "name": "jennib",
    "email": "jenni.b@gmail.com"
  },
  "main": "./out/main/index.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "cross-env VITE_DEV_SERVER_URL=http://localhost:3000 electron-vite dev -- --enable-logging --trace-warnings",
    "electron:build": "electron-vite build",
    "preview": "electron-vite preview",
    "dist": "electron-vite build && electron-builder",
    "test": "vitest",
    "electron:clean": "Remove-Item -Path 'dist', 'out', 'node_modules', '.vite' -Recurse -Force -ErrorAction SilentlyContinue"
  },
  "build": {
    "appId": "com.mycnc.app",
    "productName": "myCNC",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*",
      "package.json",
      "build/mycnc.icns"
    ],
    "mac": {
      "category": "public.app-category.Utilities",
      "icon": "build/mycnc.icns",
      "extendInfo": {
        "NSCameraUsageDescription": "This app requires camera access to capture video for your CNC projects.",
        "NSMicrophoneUsageDescription": "This app requires microphone access to capture audio."
      }
    },
    "win": {
      "target": "nsis",
      "icon": "build/mycnc.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "build/icons"
    }
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@vercel/analytics": "^1.5.0",
    "@xstate/react": "^6.0.0",
    "react-joyride": "^2.9.3",
    "xstate": "^5.24.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "cross-env": "^10.1.0",
    "electron": "^29.0.1",
    "electron-builder": "^26.3.1",
    "electron-vite": "^4.0.1",
    "jsdom": "^27.2.0",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.14"
  }
}
