{
    "name": "mycnc-monorepo",
    "private": true, 
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "npm run dev --workspace=apps/sender",
        "build": "npm run build -w @mycnc/shared && npm run build --workspaces",
        "test": "npm run test --workspaces",
        "electron:dev": "npm run electron:dev --workspace=apps/sender",
        "electron:build": "npm run electron:build --workspace=apps/sender",
        "clean": "node clean.cjs"
    },
    "devDependencies": {
        "typescript": "5.5.2",
        "vite": "^7.2.6"
    }
}