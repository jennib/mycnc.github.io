{
  "compilerOptions": {
    "target": "ES2022",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "paths": {
      "@/*": [
        "./src/renderer/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}